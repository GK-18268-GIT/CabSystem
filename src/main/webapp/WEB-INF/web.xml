<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
  <display-name>Mega City Cab System</display-name>
  
  <welcome-file-list>
  	 <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	 <servlet-name>LoginServlet</servlet-name>
  	 <servlet-class>com.system.controller.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	 <servlet-name>LoginServlet</servlet-name>
  	 <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	 <servlet-name>RegisterServlet</servlet-name>
  	 <servlet-class>com.system.controller.RegisterServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	 <servlet-name>RegisterServlet</servlet-name>
  	 <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>

  <servlet>
  	<servlet-name>BookingServlet</servlet-name>
  	<servlet-class>com.system.controller.BookingServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>BookingServlet</servlet-name>
	<url-pattern>/BookingServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>CabControllerServlet</servlet-name>
  	<servlet-class>com.system.controller.CabControllerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CabControllerServlet</servlet-name>
	<url-pattern>/CabControllerServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>DriverServlet</servlet-name>
  	<servlet-class>com.system.controller.DriverServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>DriverServlet</servlet-name>
	<url-pattern>/DriverServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>PaymentControllerServlet</servlet-name>
  	<servlet-class>com.system.controller.PaymentControllerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>PaymentControllerServlet</servlet-name>
	<url-pattern>/PaymentControllerServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>com.system.controller.ImageServlet</servlet-class>
        <init-param>
            <param-name>uploadPath</param-name>
            <param-value>E:\Eclipse-Projects\CabSystemUploads</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/uploads/*</url-pattern>
    </servlet-mapping>

  
  

</web-app>
